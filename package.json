{
  "name": "productivity",
  "version": "1.0.0",
  "description": "Minimalistic desktop productivity app",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "vite build && electron-builder",
    "build:vite": "vite build",
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "29.4.6",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^4.2.12",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.6",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "9.4.3",
    "date-fns": "^3.3.1",
    "lucide-svelte": "^0.344.0"
  },
  "build": {
    "appId": "com.productivity.todoapp",
    "productName": "Todo Productivity",
    "directories": {
      "output": "dist-electron",
      "buildResources": "resources"
    },
    "files": [
      "src/main/**/*",
      "dist/**/*"
    ],
    "extraMetadata": {
      "main": "src/main/index.js"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  }
}
